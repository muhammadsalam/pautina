    img
        margin-right 15px

.iptv-card_list
    margin-top 60px
    list-style: disc
    padding-left 30px
    font-size 18px
    font-weight 500
    color: var(--body)


.tarriff
    padding 128px 0 150px

.tarriff-top
    display flex
    align-items center
    justify-content center

.tarriff_tag
    padding 30px 40px
    line-height 28px
    font-size 40px
    border-radius: 20px
    font-weight 600
    background-color #E1E1E1
    margin-left 40px

.tarriff-list
    margin-top 76px
    display flex
    justify-content space-between

.tarriff-card
    padding 90px 72px
    background-color #fff
    border: 2px solid #BDC1C9;
    box-shadow: 0px 4px 30px #E6E6E8;
    border-radius: 40px;
    max-width: 480px
    display flex
    flex-direction: column
    align-items center

.tarriff-card_title
    line-height 28px
    font-size 40px
    font-weight 700
    color: #131313

.tarriff-card_tag
    font-size 30px
    font-weight 700
    line-height 21px
    color: #131313
    padding 18px 20px
    background-color #E1E1E1
    border-radius: 20px
    margin-top 30px

.tarriff-card_list
    margin-top 74px

.tarriff-card_item
    position relative
    padding-left 50px
    font-size 24px
    font-weight 500
    color: #424242
    & + &
        margin-top 34px
    img
        position absolute
        left 0
        top 5px

.tarriff-card_text
    margin-top 50px
    font-size 18px
    font-weight 500
    color: #424242
    line-height 21px

.tarriff-card_price
    margin-top 74px
    color: #1A1A1A
    font-size 30px
    font-weight 600
    line-height 21px

.tarriff-card_link
    margin-top 74px
    padding 30px 65px
    background-color var(--title)
    line-height 17px
    border-radius: 20px
    font-size 24px
    color: #fff
    text-decoration none


.faq
    padding: 150px 0

.faq_title
    text-align center

.faq-list
    margin-top 100px
    display flex
    align-items center
    flex-direction: column
    gap: 26px

.faq-item
    width 100%
    max-width: 1260px
    background: #FFFFFF;
    border: 1px solid #BDC1C9;
    box-shadow: 0px 4px 30px #E6E6E8;
    border-radius: 20px;
    --offset: 40px
    transition: padding-bottom .123s ease-in

.faq-item[open]
    padding-bottom var(--offset)
    .faq-item_summary:before
        transform: rotate(45deg)
.faq-item_summary
    list-style: none
    position relative
    display flex
    align-items center
    padding var(--offset)
    line-height 17px
    font-size 24px
    font-weight 600
    color: #000
    cursor: pointer

.faq-item_text
    padding 0 var(--offset)
    max-height: 0
    overflow: hidden
    transition: max-height .2s ease-in

.faq-item_summary::before
    content: url('../img/plus.svg');
    position: absolute;
    right var(--offset)
    transition: transform .2s ease-out;
    line-height 0


.footer
    background-color #0D0D0D
    color: #fff
    margin-top 200px

.footer a
    color: inherit
    text-decoration none

.footer-top
    padding 80px 0
    display flex
    justify-content space-between

.footer-list
    max-width: 351px

.footer-item:not(:last-child)
    margin-bottom 12px

.footer-item--address:not(:last-child)
    margin-bottom 24px

.footer-item:first-child
    margin-bottom 36px

.footer-item_strong
    line-height 28px
    font-weight 700
    font-size 30px

.footer-item_link
    font-size 20px
    line-height 28px

.footer-item_address
    font-size 20px
    line-height 28px

.footer-bottom
    padding 50px 0
    display flex
    align-items center
    justify-content space-between
    border-top: 1px solid #313131;

.footer-bottom_text
    font-weight 600
    font-size 20px
    line-height 28px
    color: #868686

.footer-bottom_contact
    display flex
    align-items center
    gap: 42px


