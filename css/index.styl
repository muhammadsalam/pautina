// шрифты
@font-face {
    font-family: 'Gilroy';
    src: url('../fonts/Gilroy-Bold.eot');
    src: local('Gilroy Bold'), local('Gilroy-Bold'),
        url('../fonts/Gilroy-Bold.eot?#iefix') format('embedded-opentype'),
        url('../fonts/Gilroy-Bold.woff2') format('woff2'),
        url('../fonts/Gilroy-Bold.woff') format('woff'),
        url('../fonts/Gilroy-Bold.ttf') format('truetype');
    font-weight: bold;
    font-style: normal;
}

@font-face {
    font-family: 'Gilroy';
    src: url('../fonts/Gilroy-Semibold.eot');
    src: local('Gilroy Semibold'), local('Gilroy-Semibold'),
        url('../fonts/Gilroy-Semibold.eot?#iefix') format('embedded-opentype'),
        url('../fonts/Gilroy-Semibold.woff2') format('woff2'),
        url('../fonts/Gilroy-Semibold.woff') format('woff'),
        url('../fonts/Gilroy-Semibold.ttf') format('truetype');
    font-weight: 600;
    font-style: normal;
}

@font-face {
    font-family: 'Gilroy';
    src: url('../fonts/Gilroy-Medium.eot');
    src: local('Gilroy Medium'), local('Gilroy-Medium'),
        url('../fonts/Gilroy-Medium.eot?#iefix') format('embedded-opentype'),
        url('../fonts/Gilroy-Medium.woff2') format('woff2'),
        url('../fonts/Gilroy-Medium.woff') format('woff'),
        url('../fonts/Gilroy-Medium.ttf') format('truetype');
    font-weight: 500;
    font-style: normal;
}

// переменные
:root
    --title: #252322
    --body: #424242
    --accent: #FF7A00
    --white: #FFFFFF


// keyframes
@keyframes arrow-right
    0%
        transform: rotateZ(0deg)
    10%
        transform: rotateZ(20deg)
    30%
        transform: rotateZ(-10deg)
    50%
        transform: rotateZ(0deg)
    100%
        transform rotateZ(0deg)




// база
*
    margin 0
    padding 0
    font-family 'Gilroy', sans-serif
    box-sizing: border-box

ul
    list-style: none

.container
    max-width: 1600px
    padding 0 40px
    margin 0 auto


// код
.link
    transition: opacity .123s ease-in
    opacity 1
    &:hover
        opacity .9
    &:focus,&:active
        opacity: .8

body
    font-weight 500


.header
    position absolute
    top: 60px
    left 0
    width 100%
    z-index 10

.header_inner
    transition: padding .2s ease-in, margin .2s ease-in
    display flex
    align-items center
    justify-content space-between

.burger
    height: 13px;
    width: 18px;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 0;
    margin: 0;
    border: 0;
    background: 0;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    outline: none;
    position relative
    &:before,
    &:after,
    span
        content: ''
        display inline-block
        width 18px
        height 2px
        background-color #1C1B1F
        transform-origin: left;
        transition transform 0.3s ease-out, opacity 0.3s ease-out, visibility 0.3s ease-out, margin 0.2s ease-out
    &:before,
    &:after
        position absolute
    &:before
        top 0
    &:after
        bottom 0

.burger.active
    overflow: visible
    height 14px
    
.header-burger
    display none

.header-info
    display flex
    align-items center

.logo
    font-size 50px
    font-weight 700
    text-decoration none
    line-height: 35px;

.header-logo
    color: var(--title)

.nav-list
    display flex
    align-items center
    gap: 80px

.nav_link
    text-decoration none
    color: #131313
    line-height: 14px
    font-size 20px
    font-weight 600

.header-info
    font-weight 600

.header-info_support
    display flex
    flex-direction: column
    gap: 15px
    line-height: 14px
    font-size 20px
    color: var(--body)
    .link
        text-decoration none
        color: #131313

.header-info_link
    text-decoration none
    color: #131313
    font-size 30px
    line-height 21px
    margin-left 41px
    span
        display inline-flex
        height 52px
        width 52px
        border-radius: 14px / 17px
        background-color var(--title)
        align-items center
        justify-content center
        margin-right 16px


.home
    padding 291px 0 279px
    width 100%
    background: linear-gradient(15deg, #DDD 0%, #e7e7e8 50%), #E7E7E8
    background-position: 0 0;
    border-radius: 0 0 100px 100px
    position relative
    overflow: hidden

.home:after
    content ''
    background-image url('../img/human-home.png')
    width 849px
    height 862px
    background-size cover
    position absolute
    left calc(50% + 341px)
    transform: translateX(-50%)
    bottom -25px

.home_block
    max-width: 604px
    position relative
    z-index: 2

.home_title
    font-size 60px
    font-weight 700
    line-height 42px

.home_body
    margin-top 82px
    line-height 36px
    font-size 24px
    color: var(--body)
    max-width: 552px

.home-buttons
    margin-top 90px

.home-buttons_button
    background-color var(--title)
    padding 15px 15px 15px 40px
    color: var(--white)
    margin-right 44px
    display inline-flex
    align-items center
    transition: background-color .123s ease-in
    font-weight 600
    font-size 24px
    border-radius: 20px / 25px
    border: none
    line-height: 150%
    cursor: pointer
    &:hover
        background-color #131313
    &:active,&:focus
        background-color #111
    &:after
        content: 'сейчас'
        margin-left 5px
    span
        order: 1
        width 56px
        height 56px
        display flex
        align-items center
        justify-content center
        margin-left 30px
        background-color var(--white)
        border-radius: 14px / 17px
        img
            transform-origin center
            animation: arrow-right 2s ease-in-out infinite

.home-buttons_link
    color: var(--title)
    font-size 24px
    font-weight 600


.action
    margin 150px 0

.action_inner
    max-width: 1520px
    padding 86px 37px 73px 38px
    box-shadow: 0px 4px 30px #E6E6E8;
    border-radius: 30px

.action_title
    font-size 34px
    line-height 24px
    text-align center

.action-form
    margin-top 63px
    display grid
    --maxwidth 200px
    grid-template-columns: repeat(auto-fit, minmax(var(--maxwidth),1fr))
    align-items center
    gap: 19px

.action-form_input
    border: 2px solid #BDC1C9
    border-radius: 20px
    padding 24px 20px 24px 26px
    color: var(--title)
    font-size 20px
    line-height 14px
    height 74px
    flex: 1
    &:placeholder
        color: #838383

.action-form
    .choices
        flex: 1
        margin-bottom 0
        border: 2px solid #bdc1c9
        border-radius: 20px
        &:after
            right 30px
        &.is-focused
            border: 2px solid black
        overflow visible
    .choices__inner
        height 74px
        border-radius: 20px
        display flex
        align-items center
        border: 0
    .choices__item:not(.choices__item--selected)
        font-size 20px !important
        font-weight 600
        line-height 14px
        padding 24px 24px 24px 28px !important
        &.is-selected
            display none

.action-form_button
    flex: 1
    background-color #252322
    padding 24px 0
    text-align center
    color: var(--white)
    font-weight 700
    cursor: pointer
    font-size 24px
    border-radius: 20px
    transition: background-color .123s ease-in, color .123s ease-in
    line-height 100%
    border: 0
    &:hover
        background-color #2a2828
    &:active, &:focus
        background-color #363434

.action_text
    font-size 19px
    line-height 150%
    height 13px
    font-weight 600
    color: #818181
    text-align center
    margin-top 50px
    span
        font-weight 700
        color: var(--title)
        cursor: pointer


.advantage
    padding 150px 0

.section-top
    display flex
    align-items flex-start
    justify-content space-between
    gap: 20px

.title
    font-size 60px
    font-weight 700
    line-height 42px
    color: var(--title)

.text
    font-weight 500
    font-size 24px
    line-height 150%
    color: var(--body)

.advantage_text
    max-width: 585px

.advantage_img
    width 100%
    margin 100px auto
    display block
    max-width: 1920px

.advantage-list
    display flex
    align-items flex-start
    justify-content space-between

.advantage-list_item
    strong
        font-size 60px
        font-weight 700
        line-height 42px
        color: #131313
    p
        font-size 24px
        font-weight 500
        margin-top 50px
        color: var(--body)
        max-width: 170px


.stocks
    margin 150px 0
    padding 0 140px

.stock_inner
    border-radius: 40px
    padding 0
    background: linear-gradient(111.41deg, #ECECF4 0%, #E2E2EB 64.08%)

.swiper
    overflow: visible

.swiper-wrapper
    align-items stretch

.swiper-button-next, .swiper-button-prev
    color: #1C1B1F
    padding 25px
    background-color #EAEAF2
    border-radius: 20px
    width auto
    height auto
    transition background-color .123s ease-in

.swiper-button-prev:hover, .swiper-button-next:hover
    background-color #e6e6e8

.swiper-button-prev:after, .swiper-button-next:after
    content none

.swiper-button-prev
    left: -120px

.swiper-button-next
    right -120px

.swiper-slide
    height auto

.swiper-slide-block
    padding: 139px 109px 116px
    display flex
    justify-content space-between
    align-items center
    height 100%

.swiper-slide-active
    .swiper-left_title
        transition: .25s transform .2s ease-in
        transform: translateX(0)

    .swiper-left_text
        transition: .3s transform .2s ease-in
        transform: translateX(0)

    .swiper-left_link
        opacity: 1
        visibility: visible
        transition: .35s opacity .2s ease-in

    .swiper-right_img
        transform: translate(-25%, -50%)
        transition: .4s transform .15s ease-out

.swiper-left
    display flex
    flex-direction: column
    align-items flex-start
    justify-content space-between
    position relative
    z-index 1
    height 100%
    
.swiper-left_title-block
    overflow: hidden
    margin -20px 0
    padding 20px 0

.swiper-left_title
    font-size 60px
    color: var(--title)
    font-weight 700
    line-height 42px
    transition: transform .15s ease-in
    transform: translateX(-100%)

.swiper-left_text-block
    overflow: hidden

.swiper-left_text
    font-weight 500
    font-size 24px
    line-height 150%
    margin 62px 0
    max-width: 660px
    transition: transform .15s ease-in
    transform: translateX(-100%)

.swiper-left_link
    color: #fff
    text-decoration none
    display inline-block
    background-color var(--title)
    padding 30px 65px
    border-radius: 20px
    line-height 17px
    font-size 24px
    font-weight 600
    opacity: 0
    visibility: hidden
    transition: opacity .15s ease-in

.swiper-right_img
    position absolute
    right 0
    top: 50%
    transform: translate(-25%, 100%)
    transition: transform .15s ease-in

.swiper-pagination-bullet
    height 14px
    width 14px
    background-color #B9B9B9

.swiper-pagination-bullet-active
    background-color #252322


.iptv
    margin 150px 0

.iptv-list
    margin-top 100px
    display flex
    justify-content space-between

.iptv-card
    background: #FFFFFF;
    border: 1px solid #BDC1C9;
    box-shadow: 0px 4px 50px #E6E6E8;
    border-radius: 30px;
    padding 50px 50px 70px
    flex: 1
    max-width: 480px

.iptv-card_title
